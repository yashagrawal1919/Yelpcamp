<% include ../partials/header%>


   <h1 style="text-align: center; margin-top:60px">Edit Comment</h1>
   <div class="form-box">
    <form action="/campgrounds/<%= campground_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
      <div>
          <input type="text" name="comment[text]" placeholder="Text" value="<%= comment.text %>" required>
      </div>
      <div>
          <input type="text" name="comment[author]" placeholder="author" value="<%= comment.author %>" required>
      </div>
      <div>
        <input type="submit" value="Update Comment" class="btn btn-lg btn-primary">
      </div>
    </form>
</div>


<% include ../partials/footer%>